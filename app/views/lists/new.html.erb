<h1>Create a new list</h1>
<div>
<%= simple_form_for (@list) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :name %>
  <%= f.submit %>
<% end %>
</div>
<br>
<div>
  <%= link_to "back to your lists", lists_path %>
</div>
